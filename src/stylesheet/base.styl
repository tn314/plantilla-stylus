html
    background: BCK
    color: TEXTCOLOR
    font-size: FONTSIZE
    font-family: FONTFAMILY

/* ========================= HEADING ========================= */
h1, .h1, h2, .h2, h3, h4, .h4, h5, .h5, h6, .h6
    color: TEXTCOLOR-HEADING
    font-family: FONTFAMILY-HEADING
    line-height: 1em
    margin: 0
    padding: 0
h1, .h1
    font-size: 2.6em
h2, .h2
    font-size: 2.2em
h3, .h3
    font-size: 1.8em
h4, .h4
    font-size: 1.6em
h5, .h5
    font-size: 1.3em
h6, .h6
    font-size: 1em

a
    color: LINKCOLOR
    text-decoration: none
    &:hover
        color: LINKCOLOR-HOVER